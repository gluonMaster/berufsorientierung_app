# EditorConfig для обеспечения консистентности кодировки и форматирования
# https://editorconfig.org

root = true

# Настройки для всех файлов
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript, JavaScript, Svelte
[*.{ts,js,svelte}]
indent_style = tab
indent_size = 4

# JSON файлы
[*.json]
indent_style = tab
indent_size = 2

# Markdown файлы
[*.md]
trim_trailing_whitespace = false

# YAML файлы
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# SQL файлы
[*.sql]
indent_style = tab
indent_size = 2
