		"vitest": "^3.2.4",
		"wrangler": "^4.43.0"
	},
	"dependencies": {
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"bcryptjs": "^3.0.2",
		"jose": "^6.1.0",
		"qrcode": "^1.5.4",
		"svelte-i18n": "^4.0.1",
		"zod": "^4.1.12"
	}
}
